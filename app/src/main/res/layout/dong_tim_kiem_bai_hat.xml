<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgSearch"
            android:scaleType="fitXY"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/imgSearch"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Ten bai hat"
            android:id="@+id/txtSearchTenBaihat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/imgSearch"
            android:textSize="18dp"
            android:layout_below="@id/txtSearchTenBaihat"
            android:textColor="#5C5858"
            android:text="Ca si"
            android:id="@+id/txtSearchTencasi"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgSearchYeuThich"
            android:src="@drawable/iconlove"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
</layout>